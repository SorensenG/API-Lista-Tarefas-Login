generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  posts Task[]
}

model Task{
 id Int @id @default(autoincrement())
 userid Int
 title String
 description String
 status String
 createdAt DateTime @default(now())


  user User @relation (fields: [userid], references: [id])
}
